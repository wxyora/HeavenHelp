<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/login_bg"
    tools:context="com.heaven.heavenhelp.activity.LoginActivity"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="2dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="请输入手机"
            android:id="@+id/id_login_mobile"
            android:drawablePadding="10dp"
            android:textSize="16dp"
            android:phoneNumber="true"
            android:drawableLeft="@drawable/data"
            android:layout_marginBottom="10dp"
         />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="请输入密码"
            android:textSize="16dp"
            android:password="true"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/account"
            android:id="@+id/id_login_password" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <CheckBox
            android:id="@+id/remember_user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住用户名和密码"
            android:checked="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登陆"

            android:id="@+id/bt_login_submit"
            android:background="#ff00caff"
            android:layout_marginRight="20dp"
            android:layout_weight="1" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:id="@+id/bt_register_info"
            android:background="#ff00caff"
            android:layout_weight="1" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/ddd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码？"
        android:id="@+id/textView"
        android:textSize="16dp"
        android:layout_gravity="right"
        android:layout_marginTop="12dp" />

</LinearLayout>
