<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <com.heaven.heavenhelp.utils.CustomViewPager
        android:id="@+id/id_viewPager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        ></com.heaven.heavenhelp.utils.CustomViewPager>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll_index"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/loading_01"

                android:layout_weight="2" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="首页"
                android:id="@+id/tv_index"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="8dp"
                android:textIsSelectable="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll_near"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/loading_02"
                android:layout_weight="2" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="附近"
                android:id="@+id/tv_near"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll_order"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/loading_03"
                android:layout_weight="2" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="订单"
                android:id="@+id/tv_order"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll_center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/loading_04"
                android:layout_weight="2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="我"
                android:id="@+id/tv_center"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="8dp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>